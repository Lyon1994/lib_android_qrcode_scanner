<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/cyan400</item>
        <item name="colorPrimaryDark">@color/cyan700</item>
        <item name="colorAccent">@color/abc_primary_text_material_light</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/blue100</item>
        <item name="colorButtonNormal">@color/amber100</item>
        <item name="colorSwitchThumbNormal">@color/cyan100</item>
        <item name="controlBackground">@color/orange100</item>
        <item name="windowActionBar">false</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
